<?xml version="1.0"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
    xmlns:hr="http://localhost/roommates/hr/schemas"                              
    elementFormDefault="quilified"
    targetNamespace="http://localhost/roommates/hr/schemas">

    <xs:element name="houses_request">
        <complexType>
            <xs:all>
                <xs:element name="house_basic" type="hr:house_basic_type"/>
                <xs:element name="house_advanced" type="hr:house_advanced_type"/>
                <xs:element name="roommates_preferences" type="roommates_preferences_type"/>
                <xs:element name="sort" type="sort_type"/>
            </xs:all>
        </complexType>
    </xs:element>


    <xs:complexType name="house_advanced_type">
        <xs:sequence>
            <xs:element name="house_type" minOccrs="0" type="house_type_type"/>
            <xs:element name="heating_type" minOccurs="0" type="heating_type"/>
            <xs:element name="bedroom_num_min" minOccurs="0" type="xs:integer"/>
            <xs:element name="bathroom_num_min" minOccurs="0" type="xs:integer"/>
            <xs:element name="availability_date_from" minOccurs="0" type="xs:date"/>
            <xs:element name="rent_period" minOccurs="0" type="integer"/>
            <xs:element name="floor_min" minOccurs="0" type="floor_min_type"/>
            <xs:element name="construction_year_min" minOccurs="0" type="construction_year_type"/>
            <xs:element name="solar_heater" minOccurs="0" type="xs:boolean"/>
            <xs:element name="aircondition" minOccurs="0" type="xs:boolean"/>
            <xs:element name="garden" minOccurs="0" type="xs:boolean"/>
            <xs:element name="parking" minOccurs="0" type="xs:boolean"/>
            <xs:element name="shared_pay" minOccurs="0" type="xs:boolean"/>
            <xs:element name="security_doors" minOccurs="0" type="xs:boolean"/>
            <xs:element name="storeroom" minOccurs="0" type="xs:boolean"/>
        <xs:sequence>
    </xs:complexType>
   
    <xs:complexType name="house_basic_type">
        <xs:sequence>
            <xs:element name="min_area" minOccurs="0" type="xs:integer"/>
            <xs:element name="max_area" minOccurs="0" type="xs:integer"/>
            <xs:element name="max_price" minOccurs="0" type="xs:integer"/>
            <xs:element name="furnitured" minOccurs="0" type="custom_boolean_type"/>
            <xs:element name="disability_facilities" minOccurs="0" type="xs:boolean"/>
            <xs:element name="municipality" minOccurs="0" type="municipality_type"/>
            <xs:element name="has_photo" minOccurs="0" type="xs:boolean"/>
            <xs:element name="with_roommate" minOccurs="0" type="xs:boolean"/>
        </xs:sequence>
    </xs:complexType>

    <xs:complexType name="roommates_preferences_type">
        <xs:sequence>
            <xs:element name="min_age" minOccurs="0" type="xs:integer"/>
            <xs:element name="max_age" minOccurs="0" type="xs:integer"/>
            <xs:element name="gender" minOccurs="0" type="custom_boolean_type"/>
            <xs:element name="smoker" minOccurs="0" type="custom_boolean_type"/>
            <xs:element name="pet" minOccurs="0" type="custom_boolean_type"/>
            <xs:element name="child" miOccurs="0" type="custom_boolean_type"/>
            <xs:element name="couple" minOccurs="0" type="custom_boolean_type"/>
        </xs:sequence>
    </xs:complexType>



    <xs:simpleType name="sort_type">
        <xs:restriction>
            <xs:minInclusive value="0"/>
            <xs:maxInclusive value="8"/>
        </xs:restriction>
    </xs:simpleType>

    <xs:simpleType name="construction_year_type">
        <xs:restriction base="xs:integer">
            <xs:minInclusive value="1950"/>
        </xs:restriction>
    </xs:simpleType>

    <!--
        1:κεντρική
        2:αυτόνομη
        3:δεν διαθέτει
    -->

   <xs:simpleType name="heating_type">
        <xs:restriction base="xs:integer">
            <xs:minInclusive value="1"/>
            <xs:maxInclusive value="3"/>
        </xs:restriction>
    </xs:simpleType>  

    <!--
        1:υπόγειο
        2:ημιυπόγειο
        3:υπερυψωμένο
        4:ισόγειο
        5:ημιόροφος
        6:1ος όροφος
        7:2ος όροφος
        8:3ος όροφος
        9:4ος όροφος
        10:5ος όροφος
        11:6ος όροφος
        12:7ος όροφος
        13:8+ όροφος
    -->
   <xs:simpleType name="house_min_type">
        <xs:restriction base="xs:integer">
            <xs:minInclusive value="1"/>
            <xs:maxInclusive value="13"/>
        </xs:restriction>
    </xs:simpleType>  



    <!--
        1:studio
        2:γκαρσονιέρα
        3:διαμέρισμα
        4:μονοκατοικία
        5:μεζονέτα
    -->
    <xs:simpleType name="house_type_type">
        <xs:restriction base="xs:integer">
            <xs:minInclusive value="1"/>
            <xs:maxInclusive value="5"/>
        </xs:restriction>
    </xs:simpleType>  


            <xs:enumeration value="ΔΙΟΝΥΣΟΥ"/>
            <xs:enumeration value="ΕΛΕΥΣΙΝΑΣ"/>
            <xs:enumeration value="ΕΛΛΗΝΙΚΟΥ - ΑΡΓΥΡΟΥΠΟΛΗΣ"/>

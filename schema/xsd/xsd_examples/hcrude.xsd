            <xs:enumeration value="ΚΕΡΑΤΣΙΝΙΟΥ - ΔΡΑΠΕΤΣΩΝΑΣ"/>
            <xs:enumeration value="ΚΗΦΙΣΙΑΣ"/>
            <xs:enumeration value="ΚΟΡΥΔΑΛΛΟΥ"/>
            <xs:enumeration value="ΚΡΩΠΙΑΣ"/>
            <xs:enumeration value="ΚΥΘΗΡΩΝ"/>
            <xs:enumeration value="ΛΑΥΡΕΩΤΙΚΗΣ"/>

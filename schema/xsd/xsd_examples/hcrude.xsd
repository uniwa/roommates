            <xs:enumeration value="ΑΓΙΩΝ ΑΝΑΡΓΥΡΩΝ - ΚΑΜΑΤΕΡΟΥ"/>
            <xs:enumeration value="ΑΓΚΙΣΤΡΙΟΥ"/>
            <xs:enumeration value="ΑΘΗΝΑΙΩΝ"/>
            <xs:enumeration value="ΑΙΓΑΛΕΩ"/>
            <xs:enumeration value="ΑΙΓΙΝΑΣ"/>
            <xs:enumeration value="ΑΛΙΜΟΥ"/>
